# ============================================
# Smart Forecast - Backend Environment
# NestJS application configuration
# ============================================

# ====== Application ======
NODE_ENV=development
PORT=8000
API_PREFIX=api/v1

# ====== PostgreSQL Database Connection ======
# Use connection string format (recommended)
DATABASE_URL=postgresql://admin:admin@localhost:5432/smart_forecast_db

# Or use individual parameters (legacy support)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=admin
DB_PASSWORD=admin
DB_DATABASE=smart_forecast_db

# ====== MongoDB Connection ======
# Connection string for Orion-LD data (if needed)
MONGO_URL=mongodb://admin:admin@localhost:27017/orion?authSource=admin

# ====== Orion-LD Context Broker ======
ORION_LD_URL=http://localhost:1026
ORION_LD_API_VERSION=ngsi-ld/v1
ORION_LD_TENANT=

# ====== OpenWeatherMap API ======
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# ====== JWT Authentication ======
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=7d

# ====== MinIO Object Storage ======
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=incidents
