# ============================================
# NPM Configuration for Smart Forecast
# ============================================

# Enable workspaces
workspaces = true

# Save exact versions in package.json (no ^ or ~)
save-exact = true

# Use legacy peer deps to avoid conflicts
legacy-peer-deps = false

# Engine strict - enforce Node version
engine-strict = true

# Progress display
progress = true

# Audit level
audit-level = moderate

# Fund messages
fund = false

# Update notifier
update-notifier = false

# Prefer offline
prefer-offline = false

# Package lock
package-lock = true

# Save prefix (none for exact versions)
save-prefix = ""

# Loglevel
loglevel = warn
